<div id="resultDiv"></div>


<script>
    var resultDiv = document.getElementById('resultDiv');
    var form = document.getElementById('main-form');

    form.addEventListener('submit', function(e){
        e.preventDefault();
        console.log('Form submission averted.');

        var grabbedData = document.getElementById('input-text');
        console.log(grabbedData.value);

        //insert stuff here
        $.ajax({
            url: '/post',
            type:'POST',data:{datum: grabbedData.value},
            success: function(data){
                console.log('data submitted: ' + JSON.stringify(data));
                resultDiv.innerHTML = JSON.stringify(data);
            },
            error: function(err) {
                console.log('Error with ajax!');
                resultDiv.innerHTML = 'Horrible error occurred: ' + err;
            }
        });


        grabbedData.value = '';
    });
</script>